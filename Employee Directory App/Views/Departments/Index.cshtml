@using Kendo.Mvc.UI
@using Kendo.Mvc.Extensions
@using Employee_Directory_App.Models

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="k-button k-button-md k-rounded-md k-button-solid">Create New</a>
</p>

<script src="~/js/departments.js"></script>

@(Html.Kendo().Grid<Department>()
    .Name("DepartmentGrid")
    .Columns(columns =>
    {
        columns.Bound(e => e.Name);
        columns.Command(command =>
        {
            command.Custom("Edit").Click("onEditClick").Text("Edit");
            command.Destroy();
        }).Title("Actions");
    })
    .Pageable()
    .Groupable()
    .Sortable()
    .Scrollable()
    .Events(e=> e.DataBound("onDataBound"))
    .DataSource(dataSource => dataSource 
        .Ajax()
        .PageSize(20)
        .Model(model => {
            model.Id(p => p.Id);
        })
    .ServerOperation(true)
    .Read(read => read.Action("ReadDepartments", "Departments"))
    .Destroy(destroy => destroy.Action("Destroy", "Departments")))
    )
