@model IEnumerable<Employee_Directory_App.Models.EmployeeProjects>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="k-button k-button-md k-rounded-md k-button-solid">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="k-button k-button-md k-rounded-md k-button-solid-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="k-button k-button-md k-rounded-md k-button-solid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="k-button k-button-md k-rounded-md k-button-solid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
