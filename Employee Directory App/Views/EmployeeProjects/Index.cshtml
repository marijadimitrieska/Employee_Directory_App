@model IEnumerable<Employee_Directory_App.Models.EmployeeProjects>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="k-button k-button-md k-rounded-md k-button-solid">Create New</a>
</p>
<script src="/js/employeeProjects.js"></script>
@(
Html.Kendo().Grid<Employee_Directory_App.Models.EmployeeProjects>()
    .Name("EmployeeProjectsGrid")
    .Columns(columns =>
    {
        columns.Bound(p => p.EmployeeFullName).Title("Employee");
        columns.Bound(p => p.Title);
        columns.Command(command =>
        {
            command.Custom("Edit").Click("onEditClick").Text("Edit");
            command.Destroy().Text("Delete");
        }).Title("Actions");
    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .Groupable()
    .Events(e => e.DataBound("onDataBound"))
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Model(model =>
        {
            model.Id(p => p.Id);
        })
        .ServerOperation(true)
        .Read(read => read.Action("ReadEmployeeProjects", "EmployeeProjects"))
        .Destroy(destroy => destroy.Action("Destroy", "EmployeeProjects"))
        )
    )
